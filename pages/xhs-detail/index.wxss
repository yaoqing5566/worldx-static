/**index.wxss**/
.xhs-detail{
  background: #fff; font-size: 14px;
}
.xhs-detail .banner{ width: 100%}
.item1{
  border-bottom: 8px solid #f1f1f1; padding: 20px 20px 25px 20px;
}
.item1 .title{
  font-weight: bold; font-weight: bold;font-size: 16px; padding-bottom: 10px;
}
.item1 .sub{
 color: #494949;font-size: 14px;
}
.progress{
  height: 13px; background-color: #f5f5f5; position: relative; margin-top: 10px; border-radius: 6px; overflow: hidden;
}
.progress image{ height: 13px; position: absolute; left: 0px; top: 0px; width: 100%; z-index: 1}
.progress .text{ font-size: 12px; color: #fff; position: absolute; top: 0px; left: 3px; z-index: 5}

.item2{
    border-bottom: 8px solid #f1f1f1; padding-bottom: 10px;
}
.item2 .title{ padding: 0 0 0 50px; position: relative; border-bottom:1px solid #c9c9c9;line-height: 50px;}
.item2 .title .ico{ width: 20px; position: absolute; left: 20px; top: 15px}
.item2 .sub{
    color: #494949;font-size: 14px;padding: 16px 20px 5px 20px;
}
.item2 .sub .a{ width: 18px; vertical-align: middle; margin-right: 2px}
.item2 .text{ line-height: 19px;padding: 0px 20px 5px 20px;display: block; font-size: 12px;}
.item2 .step{
    padding: 20px;
}
.item2 .step image{ width: 240px}
.item2 .title .copy{
 position: absolute; right: 20px; top: 0px;
}
.weui-uploader__files{padding: 0 20px; overflow: hidden}
.weui-flex-con{padding: 0 20px}
.weui-flex{ flex-wrap: wrap}
.weui-flex .weui-flex__item{
    width: calc((100% - 50px)/4);
}
.weui-flex .weui-flex__item image{ width: 100%}
.weui-flex__item {
 flex: none; margin-right: 15px;
 margin-bottom: 15px;
}
.weui-flex__item:nth-child(4n) { margin-right: 0px;}
.fixed-bottom{
     line-height: 50px; font-size: 14px;
}
.fixed-bottom .text{display: inline-block;padding: 0 0 0 15px}
.fixed-bottom .text text{ color: #f54458}
.fixed-bottom .but{float: right}
.fixed-bottom .but button{ line-height: 50px; font-size: 14px; border-radius: 0px; color: #fff; background:#f54458; border-left: 1px solid #fff;display: inline-block }