
.off-line-activity{
  background-color: #fff;
}
.off-line-activity .title{
   font-weight: bold; padding: 20px 20px 10px 20px;
}
.off-line-activity .con{overflow: hidden;padding-bottom: 30px;}
.off-line-activity .list{
  width: calc((100% - 60px)/2); float: left; margin-left: 20px; padding-bottom: 20px;
}
.off-line-activity .list .img{ position: relative; height: 0px; padding-bottom: 100%; border-radius: 6px; overflow: hidden}
.off-line-activity .list .img image{
  position: absolute; width: 100%; height: 100%; left: 0px; top: 0px;
}
.off-line-activity .list .title{
   padding: 10px 0 0 0; height: 38px; font-weight: normal; overflow: hidden;-webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical; line-height: 18px;
  box-orient: vertical;
  display: -webkit-box;
}
.off-line-activity .list .name{
  font-size: 12px; margin-top: 5px; overflow: hidden;white-space: nowrap; text-overflow: ellipsis; color:rgba(0,0,0,0.9);
}
.off-line-activity .list .time{
  font-size: 12px; margin-top: 5px; position: relative; padding-left: 22px;
}
.off-line-activity .list .time image{
  width: 15px; vertical-align: middle;  margin-right: 5px; position: absolute; left: 0px; top: 2px;
}
.off-line-activity .history{
padding-top: 30px;
}