/**index.wxss**/
.line-activity-detail {
    background: #fff;
    font-size: 14px;
}

.line-activity-detail .banner {
    display: block;
    width: 100%;
    height: 100%
}

.page-section {
    position: relative
}

.swiper-item {
    position: relative;
    width: 100%;
    height: 100%;
}

.shadow {
    position: absolute;
    width: 100%;
    height: 60%;
    left: 0px;
    bottom: 0px;
    background: -webkit-gradient(linear, 0 0, 0 100%, from(rgba(255, 255, 255, 0)), to(#000000));
    background: -moz-linear-gradient(top, rgba(255, 255, 255, 0), #000000);
    background: -o-linear-gradient(top, rgba(255, 255, 255, 0), #000000);
    background: linear-gradient(top, rgba(255, 255, 255, 0), #000000);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#00ffffff, endColorstr=#000000, GradientType=0);
    z-index: 11;

}

.text-bottom {
    color: #fff;
    z-index: 999;
    position: absolute;
    width: 100%;
    bottom: 0px;
    left: 0px;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding: 20px; padding-bottom: 30px;
}

.text-bottom .title {
    font-size: 16px;
    font-weight: bold; margin-bottom: 20px;
}

.text-bottom .tag {
    display: flex;
    justify-content: space-between;
    margin-top: 10px
}

.text-bottom .tag view {
    display: inline-block;
    height: 2px;
    background: #FFFFFF;
    background: rgba(255, 255, 255, 0.5);
    position: relative;
}

.text-bottom .tag view .pr {
    background: #fff;
    width: 0px;
    transition: all 0.5s linear 0s;
    vertical-align: top
}

.text-bottom .tag view.active .pr {
    width: 100%;
    display: inline-block
}
.text-bottom .sub{padding: 0px 0 0px 20px; position: relative;}
.text-bottom .sub .ico{
    width: 12px; margin-right: 3px; position: absolute;left: 0px; top: 2px;
}
.content{padding: 20px}
.content .title{ font-weight: bold;padding: 10px 0 10px 0;}
.content .text{
    color: #303030; line-height: 22px;  font-size: 12px;
}
.content .title text{font-size: 10px}

.markers-tag{
    background: #fff;padding: 0px 10px 10px 10px; border-radius: 10px; box-shadow: 0 0 10px #b2b2b2; width: 70%; margin: 50px auto;
    word-break: break-all;word-wrap:break-word;white-space:pre-line;
}
.markers-tag .but{
    display: inline-block; background: #ff5e00; color: #fff; border-radius: 10px; padding: 2px 10px 2px 10px; float: right;
}

.fixed-bottom{
    line-height: 50px; font-size: 14px;
}
.fixed-bottom .text{display: inline-block;padding: 0 0 0 15px}
.fixed-bottom .text text{ color: #f54458}
.fixed-bottom .but{float: right}
.fixed-bottom .but button{ line-height: 50px; font-size: 14px; border-radius: 0px; color: #fff; background:#f54458; display: inline-block }